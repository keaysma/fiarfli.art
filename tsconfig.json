{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "paths": {
      "/src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
